@model IEnumerable<IgnacioQuinteros.Models.Product>

@{
    ViewBag.Title = "Búsqueda";
}
<section class="section section--results">
    <h1 class="section__title">Resultados de búsqueda</h1>
    <div class="products-grid">
        @foreach (var item in Model)
        {
            <article onclick="window.open('@Url.Action("Article", "Home", new { id=item.Id })', '_self')" data-prod-id="@Html.DisplayFor(modelItem => item.Id)" class="product-item @item.GetMediumClass()">
                <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="">
                <h1>$ @Html.DisplayFor(modelItem => item.Price)</h1>
                <p>@Html.DisplayFor(modelItem => item.Title)</p>
                <p class="product-item__description">@Html.DisplayFor(modelItem => item.ShortSummary)</p>
            </article>
        }
    </div>
</section>